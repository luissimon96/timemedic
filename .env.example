# Configuração do banco de dados
DATABASE_URL="postgresql://username:password@localhost:5432/timemedic?schema=public"

# Segurança JWT
JWT_SECRET="your-super-secure-jwt-secret-min-256-bits"
JWT_EXPIRATION="15m"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret"
JWT_REFRESH_EXPIRATION="7d"

# Criptografia para dados sensíveis (AES-256)
ENCRYPTION_KEY="your-256-bit-encryption-key-for-pii-data"
ENCRYPTION_IV="your-128-bit-initialization-vector"

# Configuração Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# SMTP para notificações por email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="TimeMedic <noreply@timemedic.com.br>"

# Twilio para SMS (alertas críticos)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+5511999999999"

# Configurações da aplicação
APP_NAME="TimeMedic"
APP_URL="https://timemedic.com.br"
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000,https://timemedic.com.br"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Configurações específicas para o Brasil
TIMEZONE="America/Sao_Paulo"
LOCALE="pt-BR"
CURRENCY="BRL"

# Integração ANVISA
ANVISA_API_URL="https://consultas.anvisa.gov.br/api/medicamentos"
ANVISA_API_KEY="your-anvisa-api-key"

# VigiMed Integration
VIGIMOD_API_URL="https://vigimod.anvisa.gov.br/api"
VIGIMOD_API_KEY="your-vigimod-api-key"

# Logs
LOG_LEVEL="info"
LOG_FILE_ENABLED=true
LOG_FILE_PATH="./logs/timemedic.log"

# Backup e arquivamento
BACKUP_ENABLED=true
BACKUP_INTERVAL="daily"
BACKUP_RETENTION_DAYS=30

# LGPD Compliance
DATA_RETENTION_YEARS=5
ANONYMIZATION_ENABLED=true
AUDIT_LOG_RETENTION_YEARS=7

# Monitoramento
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Notificações Push (PWA)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@timemedic.com.br"